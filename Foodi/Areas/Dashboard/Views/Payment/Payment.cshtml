<style>
    .card {
        padding: 48px 58px;
        border-radius: 20px;
        border: none;
        box-shadow: 1px 5px 10px 1px rgba(0,0,0,0.2)
    }
</style>

@model Foodi.Areas.Dashboard.Models.Payment;

<div class="container py-5">
    <!-- For demo purpose -->
    <div class="row mb-4">
        <div class="col-lg-8 mx-auto text-center">
            <h1 class="display-6">Bootstrap Payment Forms</h1>
        </div>
    </div> <!-- End -->
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="card ">
                <div class="card-header">
                    <div class="bg-white shadow-sm pt-4 pl-2 pr-2 pb-2">
                        <!-- Credit card form tabs -->
                        <ul role="tablist" class="nav bg-light nav-pills rounded nav-fill mb-3">
                            <li class="nav-item"> <a data-toggle="pill" href="#credit-card" class="nav-link active "> <i class="bi bi-credit-card-fill mr-2"></i> Online </a> </li>
                            <li class="nav-item"> <a data-toggle="pill" href="#paypal" class="nav-link "> <i class="bi bi-wallet2 mr-2"></i>Cash On Delivery </a> </li>
                        </ul>
                    </div> <!-- End -->
                    <!-- Credit card form content -->
                    <div class="tab-content">
                        <!-- credit card info-->
                        <div id="credit-card" class="tab-pane fade show active pt-3">
                            <form asp-area="Dashboard" asp-controller="Payment" asp-action="AddPayment">
                                @* <form role="form" onsubmit="event.preventDefault()"> *@
                                <input type="hidden" name="PaymentMode" id="PaymentMode" value="Online" />
                                <div class="form-group">
                                    <label for="username">
                                        <h6>Card Owner</h6>
                                    </label>
                                    <input type="text" id="Name" name="Name" class="form-control" asp-for="Name" placeholder="Card Owner Name" />
                                    @* <input type="text" name="username" placeholder="Card Owner Name" required class="form-control "> *@
                                </div>
                                <div class="form-group">
                                    <label for="cardNumber">
                                        <h6>Card number</h6>
                                    </label>
                                    <div class="input-group">
                                        <input type="text" id="CardNo" name="CardNo" class="form-control" asp-for="CardNo" placeholder="Valid card number" required />
                                       @*  <input type="text" name="cardNumber" placeholder="Valid card number" class="form-control " required> *@
                                        <div class="input-group-append"> <span class="input-group-text text-muted"> <i class="bi bi-credit-card-fill"></i> </span> </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-8">
                                        <div class="form-group">
                                            <label>
                                                <span class="hidden-xs">
                                                    <h6>Expiration Date</h6>
                                                </span>
                                            </label>
                                            <div class="input-group">
                                                <input type="number" id="ExpirationMonth" name="ExpirationMonth" class="form-control" asp-for="ExpirationMonth" placeholder="MM" required oninput="validateTwoDigits(this)" />
                                                <input type="number" id="ExpirationYear" name="ExpirationYear" class="form-control" asp-for="ExpirationYear" placeholder="YY" required oninput="validateFourDigits(this)" />
                                             </div>
                                            @* <div class="input-group"> <input type="number" placeholder="MM" name="" class="form-control" required> <input type="number" placeholder="YY" name="" class="form-control" required> </div> *@
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group mb-4">
                                            <label data-toggle="tooltip" title="Three digit CV code on the back of your card">
                                                <h6>CVV <i class="fa fa-question-circle d-inline"></i></h6>
                                            </label>
                                            <input type="text" id="CvvNo" name="CvvNo" class="form-control" asp-for="CvvNo" required oninput="validateThreeDigits(this)" />
                                            @* <input type="text" required class="form-control"> *@
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="username">
                                        <h6>Address</h6>
                                    </label>
                                    <input type="text" id="Address" name="Address" class="form-control" asp-for="Address" value=@ViewBag.Address required />
                                    @* <input type="text" name="username" placeholder="Card Owner Name" required class="form-control "> *@
                                </div>
                                <div class="card-footer"> <button type="submit" class="subscribe btn btn-primary btn-block shadow-sm"> Confirm Payment </button>
                            </form>
                        </div>
                    </div> <!-- End -->
                    <!-- Paypal info -->
                    <div id="paypal" class="tab-pane fade pt-3">
                        <form asp-area="Dashboard" asp-controller="Payment" asp-action="AddPayment">
                            @* <form role="form" onsubmit="event.preventDefault()"> *@
                            <input type="hidden" name="PaymentMode" id="PaymentMode" value="CashOnDelivery" />
                            <div class="form-group">
                                <label for="username">
                                    <h6>Address</h6>
                                </label>
                                <input type="text" id="Address" name="Address" class="form-control" asp-for="Address" required/>
                                <span asp-validation-for="Address" class="text-danger"></span>
                                @* <input type="text" name="username" placeholder="Card Owner Name" required class="form-control "> *@
                            </div>
                            <div class="card-footer"> <button type="submit" class="subscribe btn btn-primary btn-block shadow-sm"> Order </button>
                        </form>
                       
                    </div> 
                    </div><!-- End -->

                    <b class="badge badge-success badge-pill shadow-sm mt-2">Order Total: @ViewBag.GrandTotal </b>

                    <!-- End -->
                </div>
            </div>
        </div>
    </div>

    <script>
        function validateTwoDigits(input) {
            input.value = input.value.replace(/\D/g, '').substring(0, 2);
        }

        function validateFourDigits(input) {
            input.value = input.value.replace(/\D/g, '').substring(0, 4);
        }

        function validateThreeDigits(input) {
            input.value = input.value.replace(/\D/g, '').substring(0, 3);
        }
    </script>
