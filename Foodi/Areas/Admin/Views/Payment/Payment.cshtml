<script>
    function filterTable() {
        var searchValue = $('#search').val().toLowerCase();

        $('table.data-table-export tbody tr').each(function () {
            var orderNoColumn = $(this).find('td:eq(0)').text().toLowerCase();
            var userNameColumn = $(this).find('td:eq(1)').text().toLowerCase();
            var paymentModeColumn = $(this).find('td:eq(2)').text().toLowerCase();
            var statusColumn = $(this).find('td:eq(3)').text().toLowerCase();

            if (
                orderNoColumn.includes(searchValue) ||
                userNameColumn.includes(searchValue) ||
                paymentModeColumn.includes(searchValue) ||
                statusColumn.includes(searchValue)
            ) {
                $(this).show();
            } else {
                $(this).hide();
            }
        });
    }

    $('#search').on('input', function () {
        filterTable();
    });
</script>
